{
    "openapi": "3.0.3",
    "info": {
        "title": "Distributed Cash Table HTTP API",
        "description": "API specification for nodes participating in the 'Distributed Cash Table' DHT network.",
        "version": "1.0.0"
    },
    "paths": {
        "/v1": {
            "description": "Resource for handling the recipient node.",
            "get": {
                "operationId": "ping",
                "summary": "Gets the recipient node.",
                "description": "Returns no content. This endpoint is used for pings and healthchecks.",
                "parameters": [
                    {
                        "$ref": "#/components/headers/X-Dct-Node-Node"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Success",
                        "headers": {
                            "X-Dct-Node-Node": {
                                "$ref": "#/components/headers/X-Dct-Node-Node"
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "5XX": {
                        "$ref": "#/components/responses/InternalError"
                    }
                }
            }
        },
        "/v1/nodes": {
            "description": "Resource for handling nodes in the recipients routing table.",
            "get": {
                "operationId": "listNodes",
                "summary": "Lists the closest nodes to the recipient or to the queried nodeKey.",
                "description": "The recipient node will return the closest nodes it has stored, or closest to the queried nodeKey. Clients should recursively use this method to find a target node. It is up to clients to measure nodeKey distances to make progress towards a target node.",
                "parameters": [
                    {
                        "$ref": "#/components/headers/X-Dct-Node-Node"
                    },
                    {
                        "name": "nodeKey",
                        "in": "query",
                        "schema": {
                            "$ref": "#/components/schemas/Hash160"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "headers": {
                            "X-Dct-Node-Node": {
                                "$ref": "#/components/headers/X-Dct-Node-Node"
                            }
                        },
                        "content": {
                            "application/octet-stream": {
                                "schema": {
                                    "type": "string",
                                    "format": "binary"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/BadRequest"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "5XX": {
                        "$ref": "#/components/responses/InternalError"
                    }
                }
            }
        },
        "/v1/tokens": {
            "description": "Resource for handling a tokens",
            "get": {
                "operationId": "listTokens",
                "summary": "Returns a stream of the recipient nodes tokens in ascending order.",
                "description": "The recipient will return a stream of tokens.",
                "parameters": [
                    {
                        "$ref": "#/components/headers/X-Dct-Node-Node"
                    },
                    {
                        "name": "minimumKey",
                        "in": "query",
                        "schema": {
                            "$ref": "#/components/schemas/Hash48"
                        }
                    },
                    {
                        "name": "maximumKey",
                        "in": "query",
                        "schema": {
                            "$ref": "#/components/schemas/Hash48"
                        }
                    },
                    {
                        "name": "cursorKey",
                        "in": "query",
                        "schema": {
                            "$ref": "#/components/schemas/Hash48"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "headers": {
                            "Transfer-Encoding" : {
                                "schema" : {
                                    "enum": ["chunked"]
                                }
                            },
                            "X-Dct-Node-Node": {
                                "$ref": "#/components/headers/X-Dct-Node-Node"
                            }
                        },
                        "content": {
                            "application/octet-stream": {
                                "schema": {
                                    "type": "string",
                                    "format": "binary"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/BadRequest"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "5XX": {
                        "$ref": "#/components/responses/InternalError"
                    }
                }
            }
        },
        "/v1/tokens/{tokenKey}": {
            "description": "Resource for handling a token identified by it's tokenKey",
            "get": {
                "operationId": "getToken",
                "summary": "Gets the requested token.",
                "description": "The recipient will return the token identified by it's tokenKey.",
                "parameters": [
                    {
                        "$ref": "#/components/headers/X-Dct-Node-Node"
                    },
                    {
                        "name": "tokenKey",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/Hash48"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "headers": {
                            "X-Dct-Node-Node": {
                                "$ref": "#/components/headers/X-Dct-Node-Node"
                            }
                        },
                        "content": {
                            "application/octet-stream": {
                                "schema": {
                                    "type": "string",
                                    "format": "binary"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/BadRequest"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "5XX": {
                        "$ref": "#/components/responses/InternalError"
                    }
                }
            },
            "patch": {
                "operationId": "patchToken",
                "summary": "Creates or updates a token.",
                "description": "The recipient will create a new token if not found and merge if they do. The recipient will return the updated token.",
                "parameters": [
                    {
                        "$ref": "#/components/headers/X-Dct-Node-Node"
                    },
                    {
                        "name": "tokenKey",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/Hash48"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/octet-stream": {
                            "schema": {
                                "type": "string",
                                "format": "binary"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "headers": {
                            "X-Dct-Node-Node": {
                                "$ref": "#/components/headers/X-Dct-Node-Node"
                            }
                        },
                        "content": {
                            "application/octet-stream": {
                                "schema": {
                                    "type": "string",
                                    "format": "binary"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/BadRequest"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "5XX": {
                        "$ref": "#/components/responses/InternalError"
                    }
                }
            }
        }
    },
    "components": {
        "headers": {
            "X-Dct-Node-Node": {
                "description": "An optional field containing information on the node requesting/responding. Nodes will use this header to discover nodes on the network. Encoded as base64url.",
                "required": false,
                "schema": {
                    "type": "string",
                    "pattern": "^[A-Za-z0-9_-]+$"
                }
            }
        },
        "responses": {
            "BadRequest": {
                "description": "Bad request.",
                "headers": {
                    "X-Dct-Node-Node": {
                        "$ref": "#/components/headers/X-Dct-Node-Node"
                    }
                },
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            },
            "Unauthorized": {
                "description": "Unauthorized.",
                "headers": {
                    "X-Dct-Node-Node": {
                        "$ref": "#/components/headers/X-Dct-Node-Node"
                    }
                },
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            },
            "NotFound": {
                "description": "The specified resource was not found.",
                "headers": {
                    "X-Dct-Node-Node": {
                        "$ref": "#/components/headers/X-Dct-Node-Node"
                    }
                },
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            },
            "InternalError": {
                "description": "Internal server error.",
                "headers": {
                    "X-Dct-Node-Node": {
                        "$ref": "#/components/headers/X-Dct-Node-Node"
                    }
                },
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            }
        },
        "schemas": {
            "Error": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                },
                "required": [
                    "code",
                    "message"
                ]
            },
            "Hash48": {
                "description": "Represents a 20 byte ripemd(sha256(value)) hash abbreviated to 6 bytes. Encoded as base64url.",
                "type": "string",
                "pattern": "^[A-Za-z0-9_-]+$",
                "minLength": 8,
                "maxLength": 8
            },
            "Hash160": {
                "description": "Represents a 20 byte ripemd(sha256(value)) hash. Encoded as base64url.",
                "type": "string",
                "pattern": "^[A-Za-z0-9_-]+$",
                "minLength": 27,
                "maxLength": 27
            }
        }
    }
}